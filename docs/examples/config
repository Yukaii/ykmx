# ykwm example config
# Location:
#   $XDG_CONFIG_HOME/ykwm/config
#   or $HOME/.config/ykwm/config

layout_backend=native
# backend values: native | opentui | plugin
# valid values: vertical_stack | horizontal_stack | grid | paperwm | fullscreen
default_layout=vertical_stack
master_count=1
master_ratio_permille=600
gap=1

show_tab_bar=true
show_status_bar=true
mouse_mode=hybrid

# Long-term plugin toggle scaffold
plugins_enabled=false
# Dev example paths from this repository:
# plugin_dir="/Users/yukai/Projects/Personal/ykwm/docs/examples/plugins.d/paperwm"
# plugins_dir="/Users/yukai/Projects/Personal/ykwm/docs/examples/plugins.d"
#   - paperwm: layout only
#   - desktop-wm: floating overlap layout + free drag/resize + window controls
# To run desktop-wm as layout owner (single shared plugin process for layout + pointer/actions):
# layout_backend=plugin
# plugins_enabled=true
# plugin_dir="/Users/yukai/Projects/Personal/ykwm/docs/examples/plugins.d/desktop-wm"
plugin_dir="$HOME/.config/ykwm/plugins"
plugins_dir="$HOME/.config/ykwm/plugins.d"
